{
  "$schema": "node_modules/nx/schemas/nx-schema.json",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "test"
        ]
      }
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/packages/**/*"],
    "prod": ["!{projectRoot}/packages/**/*.spec.tsx"]
  },
  "targetDefaults": {
    "build": {
      "inputs": ["prod", "^prod"],
      "dependsOn": [
        "^build"
      ]
    },
    "test": {
      "inputs": ["default", "^prod"]
    },
    "dev": {
      "dependsOn": [
        "^build"
      ]
    }
  }
}
